extends layout

block content
 .main.container
    .row
      .col-md-8
        h1.display-4.m-b-2 Sign Up

        // register form
        form.form-horizontal(method='POST' action='/register')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Name' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='Email' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' placeholder='Password' name='password')
          div.form-group
            label(for='pw2') Repeat Password:
            input#pw2.form-control(type='password' placeholder='Repeat Password' name='repeatPassword')

          | By clicking Sign Up, you agree to our Terms and conditions and 
          p 
          that you have read our Data Usage Policy.
          p
            
          div.form-group
          button.btn.btn-primary(type='submit') Sign up
          p
